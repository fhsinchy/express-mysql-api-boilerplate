{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "Dead simple boilerplate for express applications",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "dev": "cross-env NODE_ENV=development nodemon app.js",
    "db:migrate": "knex migrate:latest",
    "db:refresh": "knex migrate:rollback --all; knex migrate:latest",
    "lint": "eslint --ext .js --cache --fix --ignore-path .gitignore .",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000"
  },
  "keywords": [],
  "author": "Farhan Hasin Chowdhury <mail@farhan.info>",
  "license": "MIT",
  "repository": {
    "url": "https://gitlab.com/fhsinchy/express-boilerplate"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.1",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "sqlite3": "^4.2.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lint-staged": "^10.1.7",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,}": "eslint --cache --fix"
  }
}
